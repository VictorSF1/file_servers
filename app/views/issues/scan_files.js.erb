<% if @attachments_new && !@attachments_new.empty? %>
	<% @attachments_new.each do |attachment| %>
    if ( $('.attachments').length > 0 ){
		  $('.attachments').append('<%= escape_javascript(render :partial => "attachments/filelinks", :locals => {:attachment => attachment, :options => @options}) %>');
    }else{
      $('.description').append('<%= escape_javascript(render :partial => "attachments/filelinks", :locals => {:attachment => attachment, :options => @options}) %>');
    }
	<% end %>
<% end %>

<% if @attachments_deled && !@attachments_deled.empty? %>
	<% @attachments_deled.each do |attachment| %>
		$( "a:contains('<%= j attachment %>')").parent().remove();
	<% end %>
<% end %>