<% if @attachments_new && !@attachments_new.empty? %>
  <% @attachments_new.each do |attachment| %>
    $('.attachments table').append('<%= escape_javascript(render :partial => "attachments/filelinks", :locals => {:attachment => attachment, :options => @options}) %>');
  <% end %>
<% end %>

<% if @attachments_deled && !@attachments_deled.empty? %>
  <% @attachments_deled.each do |attachment| %>
    $( "a:contains('<%= j attachment %>')").parents('tr').remove();
  <% end %>
<% end %>

<% if @scan_result[:error].present? %>
  alert(<%= j @scan_result[:error] %>);
<% end %>
